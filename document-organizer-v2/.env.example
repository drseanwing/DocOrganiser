# =============================================================================
# Document Organizer v2 - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=document_organizer
POSTGRES_USER=doc_organizer
POSTGRES_PASSWORD=changeme

# -----------------------------------------------------------------------------
# Ollama Configuration (Local LLM)
# -----------------------------------------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120
OLLAMA_TEMPERATURE=0.3

# -----------------------------------------------------------------------------
# Claude Configuration (Anthropic API)
# -----------------------------------------------------------------------------
# Required for the Organize Agent
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=16000

# -----------------------------------------------------------------------------
# Microsoft Graph API (for OneDrive/SharePoint integration)
# -----------------------------------------------------------------------------
# Required for n8n cloud integration workflows
# Configure in Azure Portal: https://portal.azure.com
MS_TENANT_ID=
MS_CLIENT_ID=
MS_CLIENT_SECRET=

# Source configuration for cloud integration
SOURCE_TYPE=onedrive
SOURCE_PATH=/Documents/ToOrganize
SOURCE_SITE_ID=

# Target configuration for upload
TARGET_PATH=/Documents/Organized
UPLOAD_STRATEGY=extract

# -----------------------------------------------------------------------------
# Processing Configuration
# -----------------------------------------------------------------------------
BATCH_SIZE=50
MAX_FILE_SIZE_MB=100
LOG_LEVEL=INFO

# Review settings
REVIEW_REQUIRED=true
AUTO_APPROVE_SHORTCUTS=false

# Version archive strategy: subfolder, inline, or archive
VERSION_ARCHIVE_STRATEGY=subfolder

# Dry run mode (simulate changes without applying)
DRY_RUN=false

# -----------------------------------------------------------------------------
# n8n Webhook Configuration
# -----------------------------------------------------------------------------
N8N_WEBHOOK_URL=http://localhost:5678
CALLBACK_URL=

# -----------------------------------------------------------------------------
# Notification Configuration (Optional)
# -----------------------------------------------------------------------------
SEND_NOTIFICATION=false
NOTIFICATION_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# -----------------------------------------------------------------------------
# Docker/Container Paths
# -----------------------------------------------------------------------------
# These paths are used inside the Docker container
DATA_INPUT_PATH=/data/input
DATA_SOURCE_PATH=/data/source
DATA_WORKING_PATH=/data/working
DATA_OUTPUT_PATH=/data/output
DATA_REPORTS_PATH=/data/reports
